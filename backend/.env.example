# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cardiotrack_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_DIALECT=postgres

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/api/v1/auth/google/callback

# Email Configuration (Gmail example)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=CardioTrack <noreply@cardiotrack.com>

# Verification Code Configuration
VERIFICATION_CODE_EXPIRATION=10
VERIFICATION_CODE_MAX_ATTEMPTS=3

# Ubidots Configuration
UBIDOTS_TOKEN=your_ubidots_token_here
UBIDOTS_API_URL=https://industrial.api.ubidots.com/api/v1.6
UBIDOTS_DEVICE_LABEL=cardiotrack_device

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Sync Configuration
SYNC_CRON_SCHEDULE=*/5 * * * *
SYNC_MAX_RETRIES=3
SYNC_RETRY_DELAY=60000
